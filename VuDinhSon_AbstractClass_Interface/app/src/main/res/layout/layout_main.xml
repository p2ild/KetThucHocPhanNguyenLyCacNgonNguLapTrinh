<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Điểm 1"
                android:textColor="@color/color_text_view"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/edPoint1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tọa độ x1 , y1"
                android:textColor="@color/color_edit_text"
                android:textColorHint="@color/color_edit_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Điểm 2"
                android:textColor="@color/color_text_view"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/edPoint2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tọa độ x2 , y2"
                android:textColor="@color/color_edit_text"
                android:textColorHint="@color/color_edit_text" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Điểm 3"
                android:textColor="@color/color_text_view"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/edPoint3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tọa độ x3 , y3"
                android:textColor="@color/color_edit_text"
                android:textColorHint="@color/color_edit_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Điểm 4"
                android:textColor="@color/color_text_view"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/edPoint4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tọa độ x4 , y4"
                android:textColor="@color/color_edit_text"
                android:textColorHint="@color/color_edit_text" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_button"
            android:onClick="onClickNhapHVuong"
            android:padding="10dp"
            android:text="Tọa độ hình vuông"
            android:textColor="@color/background"
            android:textSize="20sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_button"
            android:onClick="onClickNhapHChuNhat"
            android:padding="10dp"
            android:text="Tọa độ hình chữ nhật"
            android:textColor="@color/background"
            android:textSize="20sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_button"
            android:onClick="onClickTinhChuVi"
            android:padding="10dp"
            android:text="Chu vi"
            android:textColor="@color/background"
            android:textSize="30sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_button"
            android:onClick="onClickTinhDienTich"
            android:padding="10dp"
            android:text="Diện tích"
            android:textColor="@color/background"
            android:textSize="30sp" />
    </TableRow>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>
</LinearLayout>